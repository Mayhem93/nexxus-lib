{
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": "standard",
	"rules": {
		"arrow-parens": [
			2,
			"as-needed"
		],
		"camelcase": [
			2,
			{
				"properties": "never"
			}
		],
		"comma-dangle": 2,
		"consistent-return": 1,
		"curly": [
			2,
			"multi-line"
		],
		"dot-location": [
			"warn",
			"property"
		],
		"dot-notation": [
			"warn",
			{
				"allowKeywords": true,
				"allowPattern": "-"
			}
		],
		"eqeqeq": [
			"warn",
			"smart"
		],
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"key-spacing": [
			2,
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"max-len": [
			2,
			200,
			4
		],
		"newline-after-var": [
			"warn"
		],
		"newline-before-return": [
			"warn"
		],
		"no-else-return": [
			"warn"
		],
		"no-multi-spaces": 2,
		"no-multiple-empty-lines": [
			2,
			{
				"max": 1
			}
		],
		"no-trailing-spaces": 2,
		"no-undef": 2,
		"no-unused-expressions": 2,
		"no-unused-vars": 2,
		"no-use-before-define": 2,
		"no-tabs": "off",
		"quotes": [
			2,
			"single"
		],
		"require-await": [
			"warn"
		],
		"semi": [
			2,
			"always"
		],
		"strict": [
			2,
			"global"
		],
		"wrap-iife": [
			2,
			"any"
		],
		"yoda": [
			2,
			"never"
		]
	},
	"plugins": [
		"mocha"
	]
}
