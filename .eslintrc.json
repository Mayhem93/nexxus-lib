{
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": "standard",
	"rules": {
		"arrow-parens": [
			2,
			"as-needed"
		],
		"camelcase": [
			2,
			{
				"properties": "never"
			}
		],
		"comma-dangle": 2,
		"consistent-return": 1,
		"curly": [
			2,
			"multi-line"
		],
		"dot-location": [
			1,
			"property"
		],
		"dot-notation": [
			1,
			{
				"allowKeywords": true,
				"allowPattern": "-"
			}
		],
		"eqeqeq": [
			1,
			"smart"
		],
		"indent": [
			1,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"key-spacing": [
			2,
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"max-len": [
			2,
			200,
			4
		],
		"newline-after-var": 1,
		"newline-before-return": 1,
		"no-else-return": 1,
		"no-lonely-if": 1,
		"no-multi-spaces": 1,
		"no-multiple-empty-lines": [
			2,
			{
				"max": 1
			}
		],
		"no-trailing-spaces": 1,
		"no-undef": 2,
		"no-unneeded-ternary": 1,
		"no-unused-expressions": 2,
		"no-unused-vars": 2,
		"no-use-before-define": 2,
		"no-tabs": "off",
		"no-var": 2,
		"object-shorthand": 1,
		"prefer-arrow-callback": [
			1,
			{
				"allowUnboundThis": true
			}
		],
		"prefer-template": 2,
		"quotes": [
			2,
			"single"
		],
		"require-await": 2,
		"semi": [
			2,
			"always"
		],
		"strict": [
			2,
			"global"
		],
		"wrap-iife": [
			2,
			"any"
		],
		"yoda": [
			1,
			"never"
		]
	},
	"plugins": [
		"mocha"
	]
}
